#version 400 core
in vec3 Color;

out vec4 FragColor;

precision mediump float;

float random (vec2 _st)
{
    return fract(sin(dot(_st.xy,
                         vec2(12.9898,78.233)))*
        43758.5453123);
}

void main()
{
	float rand_x = random(Color.xy);
	float rand_y = random(Color.yz);
	float rand_z = random(Color.xz);
	FragColor = vec4(Color.y, Color.x, rand_z, 1.0f);
}